                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="Stock Register"
                                    android:layout_weight="1"
                                    android:textColor="@color/black" />

                                 <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                     android:id="@+id/tv_stock"
                                     android:layout_weight="0.5"
                                     android:text="@{inspData.drGodown.registerBookCertificates.stockRegister}"
                                     android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:layout_weight="1"
                                    android:text="Purchase Register"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_purchase"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.registerBookCertificates.purchaseRegister}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="Sale Price Fixation Register"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_sale"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.registerBookCertificates.salePriceFixationRegister}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:layout_weight="1"
                                    android:text="Godown Liability Register"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_godown"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.registerBookCertificates.godownLiabilityRegister}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="Insurance Certificate"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_insurance"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.registerBookCertificates.insuranceCertificate}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="Company name"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_insurance_comp"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.registerBookCertificates.insuranceCompany}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="Insurance certificate validity"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_insurance_valid"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.registerBookCertificates.insuranceValidity}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="Fire Department NOC"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_fire_noc"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.registerBookCertificates.fireDeptNoc}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="Weights and Measurements certificate issued by legal Metrology"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_weight"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.registerBookCertificates.weightMeasureCertificate}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />



                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
