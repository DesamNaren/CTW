                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:background="@color/white"
                        android:elevation="@dimen/dimen_10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5dp"
                                android:text="General Findings"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:background="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="Whether the Stock Register entries were made as per Sales Bills (Dr Depot and Hostels)"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_stock_reg_entries_made"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.generalFindings.stockRegisterEntries}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:layout_weight="1"
                                    android:text="Whether the values mentioned in bills are as per sale price fixation register"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_values_as_per_sale_price"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.generalFindings.valuesAsPerSalePrice}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="Whether the quality of the stocks stored in godown was verified and found in good condition"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_quality_verified"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.generalFindings.stockQualityVerified}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="Whether stack cards have been prominently displayed in each stack or not"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_stack_cards_displayed"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.generalFindings.stockCardDisplay}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:layout_weight="1"
                                    android:text="Whether godown has been computerized and receipt and delivery are being effected through computerized system"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_godown_computerized"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.generalFindings.computerizedSystem}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:layout_weight="1"
                                    android:text="Whether the godown is maintained in hygienic condition or not"
                                    android:textColor="@color/black" />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_godown_maintained"
                                    android:layout_weight="0.5"
                                    android:text="@{inspData.drGodown.generalFindings.hygienicCondition}"
                                    android:padding="@dimen/dimen_5dp"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:layout_weight="1"
                                    android:text="Availability of fire safety equipment"
