                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_10dp"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp">

                    <LinearLayout
                        android:id="@+id/ll_absent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_absent"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@{staff.empPresence.equalsIgnoreCase(`Unauthorised Absent`)? @drawable/absent: @drawable/absent_init}" />

                        <com.cgg.twdinspection.common.custom.CustomFontTextView
                            android:id="@+id/tv_absent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:text="@string/unauthorised_absent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_ondep"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_ondep"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@{staff.empPresence.equalsIgnoreCase(`On Deputation`)? @drawable/ondep: @drawable/ondep_init}" />

                        <com.cgg.twdinspection.common.custom.CustomFontTextView
                            android:id="@+id/tv_ondep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:text="@string/dep" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:visibility="visible">

                    <com.cgg.twdinspection.common.custom.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:text="@string/yesterday_supervision_duty_allotted" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_10dp">

                        <com.cgg.twdinspection.common.custom.CustomFontTextView
                            android:id="@+id/tv_yes_dutyAlloted"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@{staff.ydayDutyAllotted.equalsIgnoreCase(`Yes`) ? @color/colorPrimary : @color/light_gray}"
                            android:gravity="center"
                            android:padding="@dimen/dimen_5dp"
                            android:text="Yes"
                            android:textColor="@color/white" />

                        <Space
                            android:layout_width="1dp"
                            android:layout_height="wrap_content" />

                        <com.cgg.twdinspection.common.custom.CustomFontTextView
                            android:id="@+id/tv_no_dutyAlloted"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@{staff.ydayDutyAllotted.equalsIgnoreCase(`No`) ? @color/colorPrimary : @color/light_gray}"
                            android:gravity="center"
                            android:padding="@dimen/dimen_5dp"
                            android:text="No"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:visibility="visible">

                    <com.cgg.twdinspection.common.custom.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="@string/category" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/sp_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:entries="@array/category"
                        android:focusableInTouchMode="false"
                        android:selectedItemPosition="@{!TextUtils.isEmpty(staff.categPos)?Double.valueOf(staff.categPos).intValue():0}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:visibility="visible">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorAccent">

                        <com.cgg.twdinspection.common.custom.CustomFontEditText
                            android:id="@+id/et_leaves_availed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/no_of_leaves_availed"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:singleLine="true"
                            android:text="@={staff.leavesAvailed}" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorAccent">

                        <com.cgg.twdinspection.common.custom.CustomFontEditText
                            android:id="@+id/et_leaves_taken"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/no_of_leaves_taken"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:singleLine="true"
                            android:text="@{staff.leavesTaken}" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorAccent">

                        <com.cgg.twdinspection.common.custom.CustomFontEditText
                            android:id="@+id/et_leave_bal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/leave_balance"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:singleLine="true"
                            android:text="@{staff.leavesBal}" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:visibility="visible">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorAccent">

                        <com.cgg.twdinspection.common.custom.CustomFontEditText
                            android:id="@+id/last_week"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/last_week"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:singleLine="true"
                            android:text="@{staff.lastWeekTeacherAttended}" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:visibility="visible">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorAccent">

                        <com.cgg.twdinspection.common.custom.CustomFontEditText
                            android:id="@+id/et_acad_grade_panel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/teacher_s_last_year_academic_panel_grade"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:singleLine="true"
                            android:text="@{staff.acadPanelGrade}" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>