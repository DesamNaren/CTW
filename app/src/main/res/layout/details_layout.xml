<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dp">

        <com.example.twdinspection.custom.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/user_16"
            android:drawableTint="@color/list_blue"
            android:drawablePadding="@dimen/dimen_10dp"
            android:text="USERNAME: XYZ" />

        <com.example.twdinspection.custom.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:drawableLeft="@drawable/role_16"
            android:drawablePadding="@dimen/dimen_10dp"
            android:text="ROLE: DTO" />

        <com.example.twdinspection.custom.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/clock_16"
            android:drawablePadding="@dimen/dimen_10dp"
            android:text="2019-02-18: 16:40:00 PM" />
    </LinearLayout>

</LinearLayout>