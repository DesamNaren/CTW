<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dp">

        <com.cgg.twdinspection.common.custom.CustomFontTextView
            android:textColor="@color/black"
            android:id="@+id/offNme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/user_16"
            android:drawableTint="@color/colorPrimary"
            android:drawablePadding="@dimen/dimen_10dp" />

        <com.cgg.twdinspection.common.custom.CustomFontTextView
            android:textColor="@color/black"
            android:id="@+id/offDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:drawableLeft="@drawable/role_16"
            android:drawablePadding="@dimen/dimen_10dp" />

        <com.cgg.twdinspection.common.custom.CustomFontTextView
            android:textColor="@color/black"
            android:id="@+id/inspectionTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/clock_16"
            android:drawablePadding="@dimen/dimen_10dp" />
    </LinearLayout>

</LinearLayout>
</layout>