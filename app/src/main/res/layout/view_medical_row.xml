<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="callModel"
            type="com.example.twdinspection.inspection.source.MedicalDetailsBean" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:text="@string/stu_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:id="@+id/tv_stu_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:text="@string/stu_class"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:id="@+id/tv_class"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:text="@string/reason"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:id="@+id/tv_reason"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:text="@string/hos_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:id="@+id/tv_hname"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:text="@string/acc_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:id="@+id/tv_aName"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:text="@string/acc_des"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:id="@+id/tv_aDes"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:text="@string/adm_date"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <com.example.twdinspection.common.custom.CustomFontTextView
                android:id="@+id/tv_date"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>





    </LinearLayout>


</layout>