<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        android:orientation="vertical">

        <!--<RelativeLayout
            android:id="@+id/cv_profile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/list_blue" />-->

        <include
            android:id="@+id/header"
            layout="@layout/action_bar_layout"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_100dp">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/list_blue" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_cal"
                        android:layout_width="@dimen/dimen_70dp"
                        android:layout_height="@dimen/dimen_70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:src="@drawable/user1" />

                    <include
                        android:id="@+id/include_basic_layout"
                        layout="@layout/details_layout" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_profile"
            android:layout_margin="@dimen/dimen_20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/btn_schemes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/schemes"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <ImageView
                                android:layout_width="@dimen/_100dp"
                                android:layout_height="@dimen/_100dp"
                                android:layout_margin="@dimen/dimen_10dp"
                                android:background="@color/schemes"
                                android:padding="@dimen/dimen_20dp"
                                android:src="@drawable/schemes_icon" />

                            <com.cgg.twdinspection.common.custom.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Schemes"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/btn_instInsp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/inst"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <ImageView
                                android:layout_width="@dimen/_100dp"
                                android:layout_height="@dimen/_100dp"
                                android:layout_margin="@dimen/dimen_10dp"
                                android:background="@color/inst"
                                android:padding="@dimen/dimen_20dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:src="@drawable/schools_icon" />

                            <com.cgg.twdinspection.common.custom.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Institute Inspection"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/btn_reports"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/gcc"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <ImageView
                                android:layout_width="@dimen/_100dp"
                                android:layout_height="@dimen/_100dp"
                                android:layout_margin="@dimen/dimen_10dp"
                                android:background="@color/gcc"
                                android:padding="@dimen/dimen_30dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:src="@drawable/report" />

                            <com.cgg.twdinspection.common.custom.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reports"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/btn_gcc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/materialGrey300"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <ImageView
                                android:layout_width="@dimen/_100dp"
                                android:layout_height="@dimen/_100dp"
                                android:layout_margin="@dimen/dimen_10dp"
                                android:padding="@dimen/dimen_20dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:src="@drawable/gcc_icon" />

                            <com.cgg.twdinspection.common.custom.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GCC"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/btn_eng_works"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/materialGrey300"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <ImageView
                                android:layout_width="@dimen/_100dp"
                                android:layout_height="@dimen/_100dp"
                                android:layout_margin="@dimen/dimen_10dp"
                                android:padding="@dimen/dimen_20dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:src="@drawable/engineering_works_icon" />

                            <com.cgg.twdinspection.common.custom.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Engineering Works"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>