                                        android:textAlignment="center"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/list_blue" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dimen_5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">


                                    <com.google.android.material.textfield.TextInputLayout

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:errorEnabled="false">

                                        <com.example.twdinspection.common.custom.CustomFontEditText
                                            android:layout_width="@dimen/dimen_60dp"
                                            android:layout_height="@dimen/dimen_60dp"
                                            android:background="@drawable/grade_oval"
                                            android:gravity="center"
                                            android:maxLength="3"
                                            android:imeOptions="actionNext"
                                            android:inputType="number"

                                            android:singleLine="true"

                                            android:textColorHint="@color/list_blue" />

                                    </com.google.android.material.textfield.TextInputLayout>
                                </LinearLayout>


                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="1dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:background="@android:color/holo_orange_dark" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.example.twdinspection.common.custom.CustomFontTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="B"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
