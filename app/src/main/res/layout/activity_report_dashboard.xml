<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical">

        <!--<RelativeLayout
            android:id="@+id/cv_profile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary" />-->

        <include
            android:id="@+id/header"
            layout="@layout/action_bar_layout" />

        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_100dp">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/colorPrimary" />

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_cal"
                        android:layout_width="@dimen/dimen_70dp"
                        android:layout_height="@dimen/dimen_70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:src="@drawable/user1" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <include
                            android:id="@+id/include_basic_layout"
                            layout="@layout/details_layout" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_profile"
            android:layout_margin="@dimen/dimen_20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:padding="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:background="@color/schemes"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:background="@color/schemes"
                            android:id="@+id/btn_dr_godown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="@dimen/dimen_70dp"
                                android:layout_height="@dimen/dimen_70dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/dimen_10dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dimen_70dp"
                                    android:layout_height="@dimen/dimen_70dp"
                                    android:background="@drawable/app_bg" />

                                <TextView
                                    android:id="@+id/dr_godown_cnt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="25sp"
                                    android:text="NA"/>
                            </RelativeLayout>

                            <com.cgg.twdinspection.common.custom.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DR Godown"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/inst_dark"
                        android:padding="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/btn_dr_depot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="@dimen/dimen_70dp"
                                android:layout_height="@dimen/dimen_70dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/dimen_10dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dimen_70dp"
                                    android:layout_height="@dimen/dimen_70dp"
                                    android:background="@drawable/app_bg" />

                                <TextView
                                    android:id="@+id/dr_depot_cnt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="25sp"
                                    android:text="NA"/>
                            </RelativeLayout>

                            <com.cgg.twdinspection.common.custom.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DR Depot"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:padding="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:background="@color/eng_dark"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/btn_mfp_godown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="@dimen/dimen_70dp"
                                android:layout_height="@dimen/dimen_70dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/dimen_10dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dimen_70dp"
                                    android:layout_height="@dimen/dimen_70dp"
                                    android:background="@drawable/app_bg" />

                                <TextView
                                    android:id="@+id/mfp_godown_cnt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="25sp"
                                    android:text="NA"/>
                            </RelativeLayout>

                            <com.cgg.twdinspection.common.custom.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MFP Godown"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/schemes_dark"
                        android:padding="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/btn_p_unit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="@dimen/dimen_70dp"
                                android:layout_height="@dimen/dimen_70dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/dimen_10dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dimen_70dp"
                                    android:layout_height="@dimen/dimen_70dp"
                                    android:background="@drawable/app_bg" />

                                <TextView
                                    android:id="@+id/p_unit_cnt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="25sp"
                                    android:text="NA"/>
                            </RelativeLayout>

                            <com.cgg.twdinspection.common.custom.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Processing Unit"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:padding="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:background="@color/gcc_dark"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/btn_petrol_pump"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="@dimen/dimen_70dp"
                                android:layout_height="@dimen/dimen_70dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/dimen_10dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dimen_70dp"
                                    android:layout_height="@dimen/dimen_70dp"
                                    android:background="@drawable/app_bg" />

                                <TextView
                                    android:id="@+id/petrol_pump_cnt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="25sp"
                                    android:text="NA"/>
                            </RelativeLayout>

                            <com.cgg.twdinspection.common.custom.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Petrol Pump"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/green"
                        android:padding="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/btn_lpg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="@dimen/dimen_70dp"
                                android:layout_height="@dimen/dimen_70dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/dimen_10dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dimen_70dp"
                                    android:layout_height="@dimen/dimen_70dp"
                                    android:background="@drawable/app_bg" />

                                <TextView
                                    android:id="@+id/lpg_cnt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="25sp"
                                    android:text="NA"/>
                            </RelativeLayout>

                            <com.cgg.twdinspection.common.custom.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LPG"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>