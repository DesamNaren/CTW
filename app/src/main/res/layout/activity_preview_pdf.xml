<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/logo_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnLayout"
            android:orientation="vertical">

            <include
                android:id="@+id/action_bar"
                layout="@layout/action_bar_layout" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_5dp"
                        android:background="@color/white"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/dimen_10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dimen_img_margin"
                                android:background="@drawable/telangana" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_margin"
                                android:gravity="center"
                                android:text="Tribal Welfare Department"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Government of Telangana"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_margin"
                                android:gravity="center"
                                android:text="Inspection Report-School Inspection"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dimen_margin"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <include
                        android:id="@+id/general_info"
                        layout="@layout/activity_report_general_info" />

                    <include
                        android:id="@+id/stud_att"
                        layout="@layout/report_activity_students_attendance" />

                    <include
                        android:id="@+id/staff"
                        layout="@layout/report_activity_students_attendance" />

                    <include
                        android:id="@+id/medical"
                        layout="@layout/activity_report_medical" />

                    <include
                        android:id="@+id/diet"
                        layout="@layout/activity_report_diet_issues" />

                    <include
                        android:id="@+id/infra"
                        layout="@layout/activity_report_infrastructure" />

                    <include
                        android:id="@+id/academic"
                        layout="@layout/activity_report_academic" />

                    <include
                        android:id="@+id/co_curricular"
                        layout="@layout/activity_report_co_curricular" />

                    <include
                        android:id="@+id/entitlement"
                        layout="@layout/activity_report_entitlements" />

                    <include
                        android:id="@+id/registers"
                        layout="@layout/activity_report_registers" />

                    <include
                        android:id="@+id/gen_comments"
                        layout="@layout/activity_report_general_comments" />

                    <include
                        android:id="@+id/view_photos"
                        layout="@layout/activity_view_photos" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>


        </LinearLayout>

        <include
            android:id="@+id/btnLayout"
            layout="@layout/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</layout>