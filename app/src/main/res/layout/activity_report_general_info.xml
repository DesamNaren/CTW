<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="inspData"
            type="com.example.twdinspection.inspection.reports.source.GeneralInfo" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_next"
            android:layout_below="@+id/action_bar"
            android:background="@color/grey_light"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:background="@color/white"
                android:padding="@dimen/dimen_10dp">

                <include
                    android:id="@+id/include_basic_layout"
                    layout="@layout/details_layout" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:elevation="@dimen/dimen_10dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_5dp"
                            android:text="1."
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/dimen_5dp"
                                android:text="@string/mandal"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/man_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/dimen_5dp"
                                android:text="@{inspData.mandalName}" />


                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_5dp"
                            android:text="2."
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5dp"
                                android:text="@string/name_of_the_institution"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/inst_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5dp"
                                android:text="@{inspData.instName}" />
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_5dp"
                            android:text="6."
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5dp"
                                android:text="@string/info_present_time"
                                android:textColor="@color/black" />

                            <RadioGroup
                                android:id="@+id/rg_present_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <RadioButton
                                    android:id="@+id/rb_yes_present_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:checked="@{inspData.hMHWOPresence.equalsIgnoreCase(`Yes`)}"
                                    android:clickable="false"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="@string/yes" />

                                <RadioButton
                                    android:id="@+id/rb_no_present_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="@{inspData.hMHWOPresence.equalsIgnoreCase(`No`)}"
                                    android:clickable="false"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="@string/no" />

                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/black" />

                    <LinearLayout
                        android:id="@+id/ll_leavetype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_5dp"
                        android:visibility="@{inspData.hMHWOPresence.equalsIgnoreCase(`No`)? View.VISIBLE : View.GONE}">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_5dp"
                            android:text="7."
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="@string/leave_reason_type"
                                    android:textColor="@color/black" />

                                <RadioGroup
                                    android:id="@+id/rg_leavetype"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <RadioButton
                                        android:id="@+id/rb_leaves"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="@{inspData.leaveType.equalsIgnoreCase(`Leaves`)}"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/leaves" />

                                    <RadioButton
                                        android:id="@+id/rb_absent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="@{inspData.leaveType.equalsIgnoreCase(`Unauthorized Absent`)}"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/unauthorized_absent" />

                                    <RadioButton
                                        android:id="@+id/rb_od"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="@{inspData.leaveType.equalsIgnoreCase(`OD`)}"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/od" />

                                </RadioGroup>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_od_capture_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="@{inspData.leaveType.equalsIgnoreCase(`OD`)? View.VISIBLE : View.GONE}">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="@string/od_capture_type"
                                    android:textColor="@color/black" />

                                <RadioGroup
                                    android:id="@+id/rg_capturetype"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <RadioButton
                                        android:checked="@{inspData.capturetype.equalsIgnoreCase(`Out of station`)}"
                                        android:id="@+id/rb_out_of_station"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/out_of_station" />

                                    <RadioButton
                                        android:checked="@{inspData.capturetype.equalsIgnoreCase(`Within campus`)}"
                                        android:id="@+id/rb_within_campus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/within_campus" />

                                    <RadioButton
                                        android:checked="@{inspData.capturetype.equalsIgnoreCase(`Within Mandal`)}"
                                        android:id="@+id/rb_within_mandal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/within_mandal" />

                                    <RadioButton
                                        android:checked="@{inspData.capturetype.equalsIgnoreCase(`Within District`)}"
                                        android:id="@+id/rb_within_district"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/within_district" />

                                    <RadioButton
                                        android:checked="@{inspData.capturetype.equalsIgnoreCase(`ITDA level`)}"
                                        android:id="@+id/rb_itda_level"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/itda_level" />

                                    <RadioButton
                                        android:checked="@{inspData.capturetype.equalsIgnoreCase(`State Level`)}"

                                        android:id="@+id/rb_state_level"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/state_level" />

                                </RadioGroup>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_movement_register_entry"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="@{inspData.capturetype.equalsIgnoreCase(`Out of station`)? View.VISIBLE : View.GONE}">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="@string/movement_register_entry"
                                    android:textColor="@color/black" />

                                <RadioGroup
                                    android:id="@+id/rg_movement_register_entry"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">


                                    <RadioButton
                                        android:id="@+id/rb_yes_movement_register_entry"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="@{inspData.movementRegisterEntry.equalsIgnoreCase(`Yes`)}"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/yes" />

                                    <RadioButton
                                        android:id="@+id/rb_no_movement_register_entry"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="@{inspData.movementRegisterEntry.equalsIgnoreCase(`No`)}"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/no" />

                                </RadioGroup>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/view_leaveType"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/black"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_5dp"
                            android:text="8."
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5dp"
                                android:text="@string/info_head_quarters"
                                android:textColor="@color/black" />

                            <RadioGroup
                                android:id="@+id/rg_head_quarters"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <RadioButton
                                    android:id="@+id/rb_yes_head_quarters"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="@{inspData.havingHeadquarters.equalsIgnoreCase(`Yes`)}"
                                    android:clickable="false"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="@string/yes" />

                                <RadioButton
                                    android:id="@+id/rb_no_head_quarters"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="@{inspData.havingHeadquarters.equalsIgnoreCase(`No`)}"
                                    android:clickable="false"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="@string/no" />

                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_5dp"
                            android:text="8.1."
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5dp"
                                android:text="@string/whether_staff_quarters_available"
                                android:textColor="@color/black" />

                            <RadioGroup
                                android:id="@+id/rg_staff_quarters"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rb_yes_staff_quarters"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="@{inspData.staffQuarters.equalsIgnoreCase(`Yes`)}"
                                    android:clickable="false"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="@string/yes" />

                                <RadioButton
                                    android:id="@+id/rb_no_staff_quarters"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="@{inspData.staffQuarters.equalsIgnoreCase(`No`)}"
                                    android:clickable="false"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="@string/no" />

                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/black" />

                    <LinearLayout
                        android:id="@+id/ll_capture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_5dp"
                            android:text="9."
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_capture_distance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="@{inspData.staffQuarters.equalsIgnoreCase(`No`)? View.VISIBLE : View.GONE}">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="@string/capture_operating_from_distance"
                                    android:textColor="@color/black" />

                                <RadioGroup
                                    android:id="@+id/rg_capture_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <RadioButton
                                        android:id="@+id/rb_below_30"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="@{inspData.captureDistance.equalsIgnoreCase(`below 30`)}"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/below_30" />

                                    <RadioButton
                                        android:id="@+id/rb_31_50"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="@{inspData.captureDistance.equalsIgnoreCase(`31-50`)}"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/_31_50" />

                                    <RadioButton
                                        android:id="@+id/rb_above_50"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="@{inspData.captureDistance.equalsIgnoreCase(`above 50`)}"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/above_50" />

                                </RadioGroup>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_capture_staying_facilities_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="@{inspData.staffQuarters.equalsIgnoreCase(`Yes`)? View.VISIBLE : View.GONE}">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dimen_5dp"
                                    android:text="@string/capture_staying_facilities_type"
                                    android:textColor="@color/black" />

                                <RadioGroup
                                    android:id="@+id/rg_capture_staying_facilities_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <RadioButton
                                        android:id="@+id/rb_in_staff_quarters"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="@{inspData.stayingFacilitiesType.equalsIgnoreCase(`in Staff Quarters`)}"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/in_staff_quarters" />

                                    <RadioButton
                                        android:id="@+id/rb_in_school_building"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="@{inspData.stayingFacilitiesType.equalsIgnoreCase(`in School Building`)}"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/in_school_building" />

                                    <RadioButton
                                        android:id="@+id/rb_pvt_building"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="@{inspData.stayingFacilitiesType.equalsIgnoreCase(`Pvt. Building`)}"
                                        android:clickable="false"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="@string/pvt_building" />

                                </RadioGroup>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_next"
            android:background="@android:color/transparent"></androidx.coordinatorlayout.widget.CoordinatorLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bg"
            android:drawableRight="@drawable/right_arrow_16"
            android:padding="@dimen/dimen_5dp"
            android:text="@string/saveandnext"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>
</layout>