<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callModel"
            type="com.cgg.twdinspection.inspection.source.medical_and_health.CallHealthInfoEntity" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp">


        <LinearLayout
            android:id="@+id/ll_class_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp">

            <com.cgg.twdinspection.common.custom.CustomFontTextView
                android:id="@+id/tv_sl_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center" />

            <View
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:background="@color/light_gray"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_5dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dimen_5dp"
                android:layout_marginStart="@dimen/dimen_5dp">


                <com.cgg.twdinspection.common.custom.CustomFontTextView
                    android:id="@+id/tv_stu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp" />

                <com.cgg.twdinspection.common.custom.CustomFontTextView
                    android:id="@+id/tv_disease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp" />


                <com.cgg.twdinspection.common.custom.CustomFontTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>